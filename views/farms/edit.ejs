<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 offset-3">
            <h1>Edit Farm</h1>
            <form action="/farms/<%= farm._id %>?_method=PATCH" method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="name">Farm Name</label>
                    <input value="<%= farm.name %>" type="text" id="name" name="farm[name]" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="city">City</label>
                    <input value="<%= farm.city %>" type="text" id="city" name="farm[city]" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">Email Address</label>
                    <input value="<%= farm.email %>" type="email" id="email" name="farm[email]" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button type="submit" class="btn btn-info text-white">Update Farm</button>
            </form>
            <div class="mt-3">
                <a href="/farms">Back</a>
            </div>
        </div>
    </div>