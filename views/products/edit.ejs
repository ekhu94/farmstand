<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-6 offset-3">
        <h1>Edit Product</h1>
        <form action="/products" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
                <label for="name" class="form-label">Product Name</label>
                <input value="<%= product.name %>" type="text" id="name" name="product[name]" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <div class="input-group">
                    <span class="input-group-text">&yen;</span>
                    <input value="<%= product.price %>" type="number" id="price" name="product[price]" class="form-control" aria-label="price"
                        aria-describedby="price" required>
                </div>
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Category</label>
                <select id="category" name="product[category]" class="form-select">
                    <% for (let cat of categories) { %> 
                        <option value="<%= cat %>" <%= cat === product.category ? 'selected' : '' %>><%= capitalizeCategory(cat) %> </option>
                    <% } %> 
                </select>
            </div>
            <button type="submit" class="btn btn-info text-white">Update Product</button>
        </form>
        <div class="mt-3">
            <a href="/products/<%= product._id %>">Back</a>
        </div>
    </div>
</div>